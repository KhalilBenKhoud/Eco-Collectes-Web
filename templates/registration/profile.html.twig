{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
{{ parent() }}
{% endblock %}


{% block child %}
<section class="page">
<h1>profil</h1>
<a href="{{ path('app_logout') }}" class="btn btn btn-warning">Se déconnecter</a>
<div class="profile-container">
    <div class="main-body">
    
    
          <div class="row gutters-sm">
            <div>
              <div class="card">
                <div class="card-body ">
                  <div class="d-flex flex-column align-items-center text-center">
                  {% if app.user.imageFilename == null %}
                  {% if app.user.gender == "homme" %}
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="user" class="rounded-circle" width="150">
                  {% else %}
                 <img src={{asset("front/images/female.png")}} alt="user" class="rounded-circle" width="150">
                   {% endif %}
                   {% else %} 
                    <img src="{{ asset("front/images/" ~ app.user.imageFilename) }}" alt="user" class="rou"/>
                   {% endif %}
                    <div class="mt-3">
                      <h4>{{ app.user.username }}</h4>
                      <p class="text-secondary mb-1">{{ app.user.roles[0] }}</p>
                      <button class="btn btn-outline-primary" onclick="openForm()">changer photo</button>
                      <div class="form-con">
                      <form method="POST" action={{ path("app_change_picture", {'id': app.user.id})}}  class="form-popup" id="myForm" enctype="multipart/form-data">
                        <div>photo de profil : </div>
                         <input type="file" class="form-control"  name="imageFilename"/>
                         <input type="submit" class="btn btn-primary" value="changer" />
                        <button type="button" class="btn cancel" onclick="closeForm()">Fermer</button>
                        </form>
                        </div>
                     </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
               
                </ul>
              </div>
            
            <div >
              <div class="card mb-15 info">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Nom d'utilisateur</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                     {{ app.user.username }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ app.user.email }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Téléphone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ app.user.phone }}
                    </div>
                  </div>
                  <hr>
                  
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Addresse </h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                     {{ app.user.address }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12 cc">
                      <a class="btn btn-info "  href={{ path("app_edit",{id : app.user.id}) }}>Modifier</a>
                     <a class="btn btn-danger " href={{ path("app_delete",{id : app.user.id}) }}>Supprimer compte</a>
                     <a class="btn btn-secondary " href={{ path("app_change_password",{id : app.user.id}) }}>changer le mot de passe</a>

                    </div>
                  </div>
                </div>
              </div>

             
                

            </div>
          </div>

        </div>
    </div>

</section>
<script>
function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}

</script>
{% endblock %}
