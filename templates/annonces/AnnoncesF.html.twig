{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block title %}Annonces{% endblock %}

{% block child %}

    <div class="page container">
        <h1  class="d-block mb-4"> Annonces </h1>
        <span class="text-muted small d-block mb-4"> Bienvenue aux annonces, voici les annonces disponibles. </span>
        <div class="card">
            <div class="row card-header">
                <a class="btn btn-primary" href='{{ path('app_annonces_new') }}'>nouvelle annonce </a>
                <form action="{{ path('app_annonces_search') }}" method="get">
                    <div class="form-group">
                        <input style="margin-top:10px; width:25%" type="text" name="q" class="form-control " placeholder="Search...">
                        <button style="margin-top:5px" type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
            <div style="margin:15px" class="grid-container">
                {% for a in annonces %}
                    <div class="card overflow-hidden text-center parent">
                        {% if (a.imgUrl) %}
                            <img src="{{ asset('uploads/image/' ~ a.imgUrl) }}">
                        {% endif %}
                        <div class="card-body">
                            <a href="#!.html" class="avatar xl rounded-circle bg-gray bg-opacity-10 p-1 position-relative mt-n8 d-block mx-auto">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="avatar-img img-fluid rounded-circle" alt="">
                            </a>
                            <h5 class="mb-0 pt-3">
                                {% if a.joinUser %}
                                <a href="#!.html" class="text-reset"> {{ a.joinUser.username }} </a>
                                {% endif %}
                            </h5>
                            <div class="row mx-0 border-top border-bottom">
                                <div class="col-6 text-center border-end py-3">
                                    <h5 class="mb-0"> {{a.dateCreation ? a.dateCreation|date('Y-m-d') : '' }} </h5>
                                    <small class="text-muted">Date de Cr√©ation</small>
                                </div>
                                <div class="col-6 text-center py-3">
                                    <h5 class="mb-0"> {{a.dateModification ? a.dateModification|date('Y-m-d') : '' }} </h5>
                                    <small class="text-muted"> Date de Modification </small>
                                </div>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                    <span class="text-muted small">Titre</span>
                                    <strong> {{ a.titre }} </strong>
                                </li>
                                <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                    <span class="text-muted small">Description</span>
                                    <strong> {{ a.description }} </strong>
                                </li>
                                <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                    <span class="text-muted small">Rating</span>
                                    <strong> {{ a.rating }} </strong>
                                </li>
                                <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                    <span class="text-muted small d-flex align-items-center">
                                        <span class="align-middle lh-1 me-1 size-5 border border-4 border-success rounded-circle d-inline-block"></span>
                                        Options
                                    </span>
                                    <div class="text-end child">
                                        <a href="{{ path('app_annonces_show', {'id': a.id}) }}" class="b btn btn-sm btn-primary">Details</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endfor %}
                </div>
        </div>
    </div>

    <style>

        .b{
            width:5rem;
            margin: 1rem;
        }
        
        .grid-container{
            display: grid;
            grid-template-columns: repeat(4,1fr);
            grid-gap: 15px;
        }
        .new-comment{
            display:flex;
            justify-content: right;
        }
        #comment{
            margin-top:15px
        }

        .avatar.xl {
            width: 5rem;
            height: 5rem;
            font-size: 1.09375rem;
        }

        .avatar img {
            max-width: 100%;
            display: block;
        }

        .rounded-circle {
            border-radius: 50%!important;
        }

        .rounded-circle {
            border-radius: 50%!important;
        }

        .bg-opacity-10 {
            --bs-bg-opacity: 0.1;
        }
        .bg-gray {
            --bs-bg-opacity: 1;
            background-color: rgba(var(--bs-gray-rgb),var(--bs-bg-opacity))!important;
        }
        .p-1 {
            padding: 0.25rem!important;
        }
        .mt-n5 {
            margin-top: -1.5rem!important;
        }
        .mx-auto {
            margin-right: auto!important;
            margin-left: auto!important;
        }
        .position-relative {
            position: relative!important;
        }
        .d-block {
            display: block!important;
        }
        a {
            color: var(--bs-link-color);
            text-decoration: none;
        }
        .container {
            margin-top: 2.5%;
            width: 85%;
            display:flex;
            justify-content: center;
        }
        .row{
            width:100% !important;
            margin: auto;
        }
        #img {
            width:60%;
        }
        #formulaire{
            width: 34.25%;
            margin-top:20px;
            margin-bottom:5px
        }
    </style>
{% endblock %}
