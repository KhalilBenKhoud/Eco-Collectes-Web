{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block title %}Annonces{% endblock %}

{% block child %}
<section class="page">
    <h1>Annonce #{{ annonce.id }} </h1>

    <div class="container">
        <div class="row">
            <div class="card  text-center">
                <div style=" margin-top: 5px; margin-bottom: 5px">
                    <a style="display:block" href="{{ path('app_annonces_edit', {'id': annonce.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                </div>
                {% if (annonce.imgUrl) %}
                <img src="{{ asset('uploads/image/' ~ annonce.imgUrl) }}" class="card-img-top img-fluid" alt="{{ annonce.titre }}">
                {% endif %}
                <div class="card-body p-0">
                    <a href="#!.html" class="avatar xl rounded-circle bg-gray bg-opacity-10 p-1 position-relative mt-n8 d-block mx-auto">
                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="avatar-img img-fluid rounded-circle" alt="">
                    </a>
                    <h5 class="mb-0 pt-3">
                    {% if (annonce.joinUser) %}
                        <a href="#!.html" class="text-reset"> {{ annonce.joinUser.username }} </a>
                    {% else %}
                        <span> Undefined </span>
                    {% endif %}
                    </h5>
                    <span class="text-muted small d-block mb-4">Full stack developer</span>
                    <div style="textAlign:center" class="row mx-0 border-top border-bottom">
                    {% if (annonce.joinUser) %}
                        <div class="col-6 text-center border-end py-3">
                            <h5 class="mb-0"> 
                                <strong> {{ annonce.rating }} </strong>
                            </h5>
                            <small class="text-muted"> Evaluation de L'utilisateur </small>
                        </div>
                    {% endif %}
                    {% if (annonce.joinUser) == null %}
                        <div class="text-center py-3">
                    {% else %}
                        <div class="col-6 text-center py-3">
                    {% endif %}

                            <h5 class="mb-0"> {{annonce.dateModification ? annonce.dateModification|date('Y-m-d') : '' }} </h5>
                            <small class="text-muted"> Date de Modification </small>
                        </div>
                    
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                            <span class="text-muted small">Titre</span>
                            <strong> {{ annonce.titre }} </strong>
                        </li>
                        <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                            <span class="text-muted small">Description</span>
                            <strong> {{ annonce.description }} </strong>
                        </li>
                        {% if (annonce.joinUser) %}
                        <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                            <span class="text-muted small"> Evaluez cet utilisateur </span>
                            <div class="text-end">
                            
                            <form action="{{ path('app_annonces_upvote', {'id': annonce.getId()}) }}" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-success">Upvote</button>
                                <input type="hidden" name="_token" value="{{ csrf_token('app_annonces_upvote') }}">
                            </form>
                            <form action="{{ path('app_annonces_downvote', {'id': annonce.getId()}) }}" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Downvote</button>
                                <input type="hidden" name="_token" value="{{ csrf_token('app_annonces_downvote') }}">
                            </form>
                            </div>
                        </li>
                        {% endif %}
                        <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                            <span class="text-muted small d-flex align-items-center">
                                <span class="align-middle lh-1 me-1 size-5 border border-4 border-success rounded-circle d-inline-block"></span>
                                Options
                            </span>
                            <div class="text-end">
                                <Button  class="btn btn-sm btn-primary">Collecter</Button>
                                {% if (annonce.joinUser) %}
                                <a href="{{ path('app_annonces_email', {'id': annonce.id}) }}" class="btn btn-sm btn-primary">Contact</a>
                                {% endif %}
                            </div>
                        </li>
                    </ul>
                </div>
            <ul class="list-group list-group-flush">
            
                <div class="new-comment">
                    <a style="margin-right:5px;" id="formulaire" href="{{ path('app_commentaire_new', {'annonceId': annonce.id})}}" class="btn btn-sm btn-primary">Commenter</a>
                    <a style="margin-right:15px" id="formulaire" href="{{ path('app_annonces_front') }}" class="btn btn-sm btn-danger">Retour</a>
                </div>
                {% for c in annonce.joinCommentaire %}
                    <div id="comment" class="card overflow-hidden text-center">    
                        <div class="text-muted sm">
                        </div>
                             
                        <div class="col">
                            <li class="list-group-item px-3 d-flex align-items-center justify-content-center">
                                Commentaire:
                            </li>                
                            <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                <strong class="text-muted small"> Utilisateur: </strong> {{c.joinUser.username}}
                                <strong class="text-muted small"> Role: </strong> Donneur
                            </li>
                            <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                <strong class="text-muted small"> Titre: </strong> {{c.titre}}
                            </li>
                            <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                                <strong class="text-muted small"> Contenu: </strong> {{c.contenu}}
                            </li>
                        </div>
                    </div>
                {% endfor %}
            </ul>
    </section>

    <style>
        .new-comment{
            display:flex;
            justify-content: right;
        }
        #comment{
            margin-top:15px
        }

        .avatar.xl {
            width: 5rem;
            height: 5rem;
            font-size: 1.09375rem;
        }

        .avatar img {
            max-width: 100%;
            display: block;
        }

        .rounded-circle {
            border-radius: 50%!important;
        }

        .rounded-circle {
            border-radius: 50%!important;
        }

        .bg-opacity-10 {
            --bs-bg-opacity: 0.1;
        }
        .bg-gray {
            --bs-bg-opacity: 1;
            background-color: rgba(var(--bs-gray-rgb),var(--bs-bg-opacity))!important;
        }
        .p-1 {
            padding: 0.25rem!important;
        }
        .mt-n5 {
            margin-top: -1.5rem!important;
        }
        .mx-auto {
            margin-right: auto!important;
            margin-left: auto!important;
        }
        .position-relative {
            position: relative!important;
        }
        .d-block {
            display: block!important;
        }
        a {
            color: var(--bs-link-color);
            text-decoration: none;
        }
        .container {
            width: 50%;
            display:flex;
            justify-content: center;
        }
        .row{
            width:100% !important;
            margin: auto;
        }
        #img {
            width:60%;
        }
        #formulaire{
            width: 16.25%;
            margin-top:5px;
            margin-bottom:5px;
            
        }
    </style>
{% endblock %}
