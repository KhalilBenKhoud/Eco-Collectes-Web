{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block title %}Annonces{% endblock %}

{% block child %}
    <section class="page">

        <h1> Contactez le posteur </h1>
        <span class="text-muted d-block mb-4"> Ecrivez un mail au posteur pour qu'on puisse vous mettre en contact </span>

        {{ form_start(form) }}
            <div class="card text-center">
                <div class="card-header">
                    <span> Ecrivez un mail Ã  Mr/Mme. {{annonce.joinUser.username}}! </span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                            <span class="text-muted small">Votre mail:</span>
                            <strong>
                                {{ form_widget(form.email, {'attr': {'class':'form-control'}})}}
                                <div class="err">
                                    {% if form_errors(form.email) %}
                                        <div class="alert alert-danger">{{ form_errors(form.email) }}</div>
                                    {% endif %}
                                </div>
                            </strong>
                        </li>
                        <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                            <span class="text-muted small">Contenu:</span>
                            <strong>
                                    {{ form_widget(form.message, {'attr': {'class':'form-control'}}) }}
                                <div>
                                    {% if form_errors(form.message) %}
                                        <div class="alert alert-danger">{{ form_errors(form.message) }}</div>
                                    {% endif %}
                                <div>
                            </strong>
                        </li>
                        
                        <div class="test text-end">
                            <button id="bton" type='submit' class=" btn btn-sm btn-success"> Envoyer </button>
                        </div>
                        {{form_end(form)}}
                        <div class='testBtn'>
                            <a id="bton" class=" btn btn-sm btn-danger " href="{{ path('app_annonces_show', {'id': annonce.id}) }}"> Annuler </a>
                        </div>
                    </ul>
                </div>
            </div>        
    </section>

<style>
        .testBtn{
            display:flex;
            justify-content:center;
            margin-top:-12.5px;    
        }
        .err{
            margin-top:5px;
        }
