<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ label|default('Ajouter')}} contrat Form</h5>

        <!-- Horizontal Form -->
        {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Date debut</label>
                <div class="col-sm-10 form-group has-danger">
                    {{ form_widget(form.date_debut,{'attr':{'placeholder':'Date debut','class':'form-control'~ ( form_errors(form.date_debut) ? ' form-control-danger' : '')}}) }}<div></div>
                    {{ form_errors(form.date_debut,{'attr':{'class':'form-control-feedback'}}) }}

                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Date fin</label>
                <div class="col-sm-10 form-group has-danger">
                    {{ form_widget(form.date_fin,{'attr':{'placeholder':'Date fin','class':'form-control'~ ( form_errors(form.date_fin) ? ' form-control-danger' : '')}}) }}
                    {{ form_errors(form.date_fin,{'attr':{'class':'form-control-feedback'}}) }}

                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label">Type contrat</label>
                <div class="col-sm-10 form-group has-danger">
                    {{ form_widget(form.type_contrat,{'attr':{'placeholder':'Type contrat','class':'form-control'~ ( form_errors(form.type_contrat) ? ' form-control-danger' : '')}}) }}
                    {{ form_errors(form.type_contrat,{'attr':{'class':'form-control-feedback'}}) }}
                </div>
            </div>
            <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Montant du contrat</label>
            <div class="col-sm-10 form-group has-danger">
                {{ form_widget(form.montant,{'attr':{'placeholder':'montant du contrat','class':'form-control'~ ( form_errors(form.montant) ? ' form-control-danger' : '')}}) }}
                {{ form_errors(form.montant,{'attr':{'class':'form-control-feedback'}}) }}
            </div>
            </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10 form-group has-danger">

                {{ form_widget(form.description,{'attr':{'placeholder':'description','class':'textarea_editor form-control'~ ( form_errors(form.description) ? ' form-control-danger' : '')}}) }}
                {{ form_errors(form.description,{'attr':{'class':'form-control-feedback'}}) }}
            </div>
        </div>




            <div class="text-center">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        {{ form_end(form) }}

    </div>
</div>



