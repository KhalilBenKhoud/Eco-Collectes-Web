{% extends 'back.html.twig' %}

{% block title %}Contrat index{% endblock %}

{% block child %}

    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tableau du contrat</h5>

                <!-- Default Table -->
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>Date_debut</th>
                        <th>Date_fin</th>
                        <th>Statut_contrat</th>
                        <th>Type_contrat</th>
                        <th>Montant</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for contrat in contrats %}
                        <tr>
                            <td>{{ contrat.id }}</td>
                            <td>{{ contrat.description|raw }}</td>
                            <td>{{ contrat.dateDebut ? contrat.dateDebut|date('Y-m-d') : '' }}</td>
                            <td>{{ contrat.dateFin ? contrat.dateFin|date('Y-m-d') : '' }}</td>
                            <td><span class="badge badge-warning">{{ contrat.statutContrat }}</span></td>
                            <td>{{ contrat.typeContrat }}</td>
                            <td>{{ contrat.montant }}</td>
                            <td style="">
                                <div class="dropdown">
                                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                        <i class="dw dw-more"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                        <a class="dropdown-item" href="{{ path('app_contrat_show', {'id': contrat.id}) }}"><i class="dw dw-eye"></i> View</a>
                                        <a class="dropdown-item" href="{{ path('app_contrat_edit', {'id': contrat.id}) }}"><i class="dw dw-edit2"></i> Edit</a>
                                        <a class="dropdown-item" href="{{ path('app_contrat_delete', {'id': contrat.id}) }}"><i class="dw dw-delete-3"></i> Delete</a>
                                    </div>
                                </div>
                            </td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <!-- End Default Table Example -->
            </div>
        </div>



    </div>



    <a href="{{ path('app_contrat_new') }}"><button type="submit" class="btn btn-primary">Create new</button></a>
{% endblock %}




