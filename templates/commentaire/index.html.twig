{% extends 'base-back.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <body class="sb-nav-fixed">
            <div id="layoutSidenav_content">
                <main>
                <h1>Commentaire</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Contenu de Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.ContenuCommentaire }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">voir</a>
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">ajouter nouveau commentaire</a>
                </main>
            </div>

{% endblock %}
