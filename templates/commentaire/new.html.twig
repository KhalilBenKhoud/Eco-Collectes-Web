{% extends 'base.html.twig' %}

{% block title %}New Commentaire{% endblock %}

{% block body %}
<section class="page">
    <h2> Cr√©er un Commentaire </h2>
    <div class="container">
        <div class="card overflow-hidden text-center">
            <ul class="list-group list-group-flush">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class':'form' }}) }}

                <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                        <span class="text-muted small">Titre:</span>
                        <strong class="inp">
                            {{ form_widget(form.titre, {'attr': {'class':'form-control'}}) }}
                        </strong>
                </li>
                <li class="list-group-item px-3 d-flex align-items-center justify-content-between">
                        <span class="text-muted small">Contenu:</span>
                        <strong class="inp">
                            {{ form_widget(form.contenu, {'attr': {'class':'form-control'}}) }}
                        </strong>
                </li>
                <button id="bton" type='submit' class="btn btn-sm btn-primary">submit</button>
                <a id="bton" class="btn btn-sm btn-primary" href="{{ path('app_commentaire_index') }}">back to list</a>

            {{ form_end(form) }}
        </div>
    </div>
</section>
